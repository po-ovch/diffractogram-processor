<Window x:Class="DiffractogramApplication.Views.HomeWindow"
        Name="Home"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DiffractogramApplication"
        mc:Ignorable="d"
        Title="HomeWindow" Height="450" Width="800" WindowState="Maximized" >
    <Grid>
        <TextBlock
            Width="400"
            Height="50"
            VerticalAlignment="Top"
            Margin="30"
            TextAlignment="Center"
            TextWrapping="WrapWithOverflow"
            FontSize="15"
            FontFamily="Arial"
        >
            The Interactive Research Toolbox for Processing Experimental Data about Nano Objects
        </TextBlock>
        <Button
            Command="{Binding OpenPictureCommand}"
            CommandParameter="{Binding ElementName=Home, Path=Move}"
            Content="Upload"
            Height="50"
            Width="100"
        />

    </Grid>
</Window>
